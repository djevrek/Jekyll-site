@import "variables"
@import "mixins"

html
	font-size fontReset

body
	font-size defaultFontSize
	line-height defaultLineHeight
	font-family defaultFontFamily

*
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box


/* =RESETS */
body, ul, ol, dl, dd, dt, p, h1, h2, h3, h4, h5, h6, img, blockquote, form, fieldset
	margin 0
	padding 0
	border 0
	list-style none

html, body
	height 100%

html
	//background url(../images/baselinegrid.png) repeat;

body
	//background #1e1e1e url(../images/blacklinen.png) repeat
	//background: url(../images/grid.png) repeat-y top;
	color colour6

section
	margin-bottom (baselineGrid * 4)

header
	padding-top (baselineGrid * 4)
	padding-bottom (baselineGrid * 4)
	> span
		display block
		margin auto
		text-align center
		padding-bottom (baselineGrid * 4)

footer
	a
		display inline-block
		margin-right 1rem
		text-decoration none
		font-size 2rem

code
	color colour4
	font-size (defaultFontSize - 0.4)		//12px
	font-family Monaco, Courier, monospace

iframe
	margin (baselineGrid * 4) 0

h1, h2, h3, h4, h5, h6
	color colour5

a
	color colour4
	text-decoration none
	&:hover
		color colour5
		transition color .3s linear 0
	
*:focus
	outline 2px solid colour1

p
	margin-bottom (baselineGrid * 4)

p:last-of-type + *
	margin-top (baselineGrid * 4)

p:last-of-type
	margin-bottom 0

ul, ol
	margin-bottom (baselineGrid * 4)
	
ul li
	list-style disc
	list-style-position inside
	
ol li
	list-style decimal
	list-style-position inside

li:not(:last-of-type)
	padding-bottom (baselineGrid * 4)

li p
	padding-bottom 0

li ul
	margin-top 10px
	margin-left 10px

ol[id^=Lighter]
	list-style-position outside

blockquote
	margin-bottom (baselineGrid * 4)
	margin-left 50px
	font-style italic
	font-family altFontFamily1
	color colour3
	&:before
		position absolute
		margin-left -2%
		content "\275d"

img
	max-width 100%

// NAVIGATION
.navigation
	padding 1.4rem 0
	ul
		display table
		width 80%
		margin 0 auto
		padding-bottom (baselineGrid * 4)
		text-transform uppercase
		box-shadow -8px 20px 16px -24px colour6
		li
			display table-cell
			padding-bottom 0
			font-family altFontFamily2
			> * 
				display block
				text-align center
			> a, > span
				font-weight bold

// STICKY MENU
.fixed
	height 157px
	nav
		position fixed
		top 0
		z-index 10
		width 100%
		background-color colour2



// CLASSES
/* List in post */
.post ul, .post ol
	list-style disc
	list-style-position inside
	li::after
		clearfix
	li img
		float left
		margin-right 10px
		margin-bottom (baselineGrid * 3)

.post
	h2
		margin-bottom (baselineGrid * 3)
		padding-top baselineGrid
	h3
		margin-bottom (baselineGrid * 2)


/* Posts list */
.posts
	li
		list-style none
		span
			font-size 1.6rem
			opacity .7
		.date::before
			opacity .7
			content " | "
		h2
			font-size 2.4rem
			line-height 2.8rem
		h2, h3
			margin-bottom 0

/* Portfolio */
.portfolio
	padding-top: (baselineGrid * 3)
	li
		display inline-block
		vertical-align top
		margin-bottom 12px
		padding-bottom 0
		list-style none
		overflow hidden
		position relative
		img
			display block
			transition opacity .2s linear .3s
			-webkit-transform translateZ(0)
			-moz-transform translateZ(0)
			transform translateZ(0)
			max-width 100%
			width 100%
		h2
			position absolute
			top 40%
			width 100%
			padding 0
			font-weight bold
			font-size 1.6em
			text-align center
			transition all .2s linear .3s
			-webkit-transform scale(5)
			-moz-transform scale(5)
			transform scale(5)
			opacity 0
			a
				font-weight normal
		&:hover h2
			-webkit-transform scale(1)
			-moz-transform scale(1)
			transform scale(1)
			opacity 1
			> a
				color colour4
		&:hover img
			opacity .4