@import "variables"
@import "mixins"

// STRUCTURE
#container
	max-width 80%
	margin 0 auto
	padding 0 0 (baselineGrid * 5)

.content
	padding-bottom (baselineGrid * 5)

// MOBILES
@media only screen and (max-width: 320px)
	#container
		max-width 94%

	// body
	// 	color yellow
	.navigation
		float none
		ul
			float none
			width 94%
			li
				display block
				a
					display block
					padding-left 0
				> *
					padding (baselineGrid * 2) 0

	.portfolio li
		float none
		margin-right 0
		width 100%

