// TYPOGRAPHY
h1, h2, h3
	font-weight normal

h1
	font-size 25px
	line-height 32px

h2
	font-size 20px
	line-height 27px

h3
	font-size 18px
	line-height 22px

h4
	font-size 15px
	line-height 18px

a:hover
	text-decoration none

pre
	font-size 1em

