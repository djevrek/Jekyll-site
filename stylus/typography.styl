@import "variables"
@import "mixins"

// TYPOGRAPHY
h1, h2, h3
	font-weight normal
	font-family altFontFamily1
	margin-bottom (baselineGrid * 4)

h1
	font-size 3.2rem;
	line-height 3.6rem

h2
	font-size 2.8rem
	line-height 3.2rem

h3
	font-size 2.4rem
	line-height 2.8rem

h4
	font-size 2rem
	line-height 2.4rem

a:hover
	text-decoration none

pre
	font-size 1rem

header span a
	font-size 2.8rem
	font-family 'Lobster', cursive
	text-decoration none